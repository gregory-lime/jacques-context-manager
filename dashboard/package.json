  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "^19.2.10",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "jimp": "^0.22.10",
    "ts-jest": "^29.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0"
